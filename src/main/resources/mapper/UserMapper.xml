<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.UserMapper">
    <insert id="insertUser">
        insert into t_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="user.userName != null">user_name,</if>
            <if test="user.userState != null">user_state,</if>
            <if test="user.userRemark != null">user_remark</if>
        </trim>

        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="user.userName != null">#{user.userName},</if>
            <if test="user.userState != null">#{user.userState},</if>
            <if test="user.userRemark != null">#{user.userRemark}</if>
        </trim>
    </insert>

    <update id="updateUser">
        update t_user
        <set>
            <if test="user.userName != null">user_name = #{user.userName},</if>
            <if test="user.userState != null">user_state = #{user.userState},</if>
            <if test="user.userRemark != null">user_remark = #{user.userRemark}</if>
        </set>
        <where>user_id = #{user.userId}</where>
    </update>
    <select id="userPage" resultType="org.example.model.User">
        select
        user_id as userId,
        user_name userName,
        user_state userState,
        user_remark userRemark
        from t_user
        <where>user_id = #{user.userId}</where>
    </select>


</mapper>